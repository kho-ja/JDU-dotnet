@model EfCrudApp.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<h1>Studentni o'chirish</h1>

<div class="alert alert-warning">
    Haqiqatan ham ushbu studentni o'chirmoqchimisiz?
</div>

<dl class="row">
    <dt class="col-sm-3">Ism</dt>
    <dd class="col-sm-9">@Model.Name</dd>
    <dt class="col-sm-3">Yosh</dt>
    <dd class="col-sm-9">@Model.Age</dd>
    <dt class="col-sm-3">Yo'nalish</dt>
    <dd class="col-sm-9">@Model.Major</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger" type="submit">O'chirish</button>
    <a class="btn btn-secondary" asp-action="Index">Bekor qilish</a>
</form>
